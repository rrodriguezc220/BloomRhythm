    <div class="position-relative">
        <video autoplay loop muted playsinline class="w-100" style="min-height: 90vh; max-height:90vh; object-fit: cover; filter: brightness(0.6);">
            <source src="~/videos/hero/video-hero.webm" type="video/webm">
            Your browser does not support the video tag.
        </video>
    </div>
    <div class="position-absolute top-0 start-0 w-100 h-100">
        <div class="container h-100">
            <div class="row h-100 align-items-center justify-content-center">
                <div class="col-lg-10 text-center">
                    <span class="badge bg-azure-radiance text-white mb-3 fs-6 fw-normal px-4 py-2 rounded-pill">
                        <i class="fa-solid fa-satellite-dish me-2"></i>
                        NASA Earth Observation Data
                    </span>
                    <h1 class="display-1 text-zumthor fw-bold mb-4">Track Life's Pulse</h1>
                    <p class="lead text-gray-chateau mb-4 fs-3">
                        Monitor global flowering events with Landsat & Sentinel-2 satellite data
                    </p>
                    <div class="d-flex gap-3 justify-content-center flex-wrap">
                        <a class="btn btn-azure-radiance btn-lg px-5 py-3 rounded-pill shadow-lg" asp-controller="Mapa" asp-action="Index">
                            <i class="fa-solid fa-map-location-dot me-2"></i>
                            Explore Interactive Map
                        </a>
                        <button class="btn btn-outline-light btn-lg px-5 py-3 rounded-pill" onclick="toggleChatbot()">
